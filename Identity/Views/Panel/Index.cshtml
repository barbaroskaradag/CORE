@model AppUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="container-fluid">

    <div class="row">

        <div class="col-md-8">
            <table class="table table-hover table-sm">
                <tr>
                    <th>isim : </th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Soyisim : </th>
                    <td>@Model.SurName</td>
                </tr>
                <tr>
                    <th>Email : </th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Telefon : </th>

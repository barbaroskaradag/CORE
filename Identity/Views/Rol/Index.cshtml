@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a asp-controller="Rol" asp-action="AddRole" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a> @* my hem içerden hem dışardan boşluk bırakır *@

<table class="table table-hover table-sm">
    <tr>
        <td>Ad</td>
        <td>İşlem</td>
    </tr>

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Sistemizde  kayıtlı rol bulunmuyor.</td>
        </tr>
    }

</table>


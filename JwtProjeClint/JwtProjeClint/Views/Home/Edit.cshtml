@model ProductList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Edit" asp-controller="Home" method="post" class="mx-auto mt-4 w-50 p-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-info btn-sm" />
        <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm">Vazgeç</a>
    </div>
</form>
